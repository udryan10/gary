!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}/
    %title Gary
    / Bootstrap
    / Latest compiled and minified CSS
    %link{href: "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", rel: "stylesheet"}/
    / Optional theme
    %link{href: "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css", rel: "stylesheet"}/
    / Latest compiled and minified JavaScript
    %script{src: "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"}
    / HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .nav.navbar.navbar-inverse{role: "navigation"}
      .container-fluid
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "/"} Gary
        / Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{href: "/schedules"} Schedules
            %li
              %a{href: "#"} Donate
            %li
              %a{href: "#"} craigslist
          %ul.nav.navbar-nav.navbar-right
            - if user_signed_in?
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                  = current_user.email
                  %span.caret
                %ul.dropdown-menu{role: "menu"}
                  %li
                    = link_to "Manage Account", edit_user_registration_path     
                  %li
                    = link_to "Logout", destroy_user_session_path, method: :delete
                  / %li.divider
            - else
              = form_tag session_path(:user) do
                .user-pass
                  = text_field_tag 'user[email]', nil, placeholder: "Email"
                  = password_field_tag 'user[password]', nil, placeholder: "Password"
                .login-options
                  %button.btn-xs.btn-success Sign in
                  %small
                    = check_box_tag 'user[remember_me]'
                    = label_tag 'user[remember_me]', 'Remember me Â·', class: "text-muted"
                    = link_to "Forgot your password?", new_password_path(:user)
        / /.navbar-collapse
      / /.container-fluid
    .container
      / jQuery (necessary for Bootstrap's JavaScript plugins)
      %script{src: "https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"}
      / Include all compiled plugins (below), or include individual files as needed
      %script{src: "//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"}
      -if flash[:notice]
        .alert.alert-info
          = flash[:notice]
      = yield