.row
  .container.text-center
    = link_to "Create New Schedule", new_schedule_path, class: "btn btn-lg btn-success"

.row
  .col-md-1
  .col-md-10
    %table.table.table-hover
      %tr
        %th Status
        %th City
        %th Title
        %th Last Posted
        %th
      - @schedules.each do |schedule|
        %tr
          %td 
            - if schedule.active == 1
              Posting...
            - elsif schedule.active == 2
              Active
            - elsif schedule.active == 3
              Deleting...
            - else
              Error!
          %td
            = schedule.city
          %td
            = schedule.title
          %td
            = schedule.updated_at
          %td
            = link_to 'Show', schedule_path(schedule), class: "btn btn-xs btn-primary"
            = link_to 'Edit', edit_schedule_path(schedule), class: "btn btn-xs btn-info"
            = link_to 'Delete', schedule_path(schedule), method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-xs btn-danger"
  .col-md-1